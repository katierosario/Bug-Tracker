@model IEnumerable<Bug_Tracker.ViewModel.CustomUserData>
@{
    ViewBag.Title = "Manage Roles";
}
<div class="page-inner">


    <div class="page-inner">
        <div class="card">
            <div class="card-body">
                <h2>@ViewBag.Title</h2>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-5">
                            @Html.ListBox("UserIds", null, htmlAttributes: new { @class = "form-control" })
                        </div>

                        <div class="col-5">
                            @Html.DropDownList("RoleName", null, "- Unassign -", htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-10">
                            <button type="submit" class="btn btn-primary" style="width:100%;">Manage Roles</button>
                        </div>
                    </div>
                }

                <hr />

                <table class="table table-striped">
                    <tr>
                        <th class="h3">
                            @Html.DisplayName("Full Name")
                        </th>
                        <th class="h3">
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th class="h3">
                            @Html.DisplayName("Role")
                        </th>
                    </tr>

                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => user.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => user.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(model => user.RoleName)
                            </td>
                        </tr>
                    }
                </table>

            </div>
        </div>
    </div>
