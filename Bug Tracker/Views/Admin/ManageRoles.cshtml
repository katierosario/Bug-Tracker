@model IEnumerable<Bug_Tracker.ViewModel.CustomUserData>
@{
    ViewBag.Title = "Manage Roles";
}
<div class="page-inner">

<h3>@ViewBag.Title</h3>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-4">
                @Html.ListBox("UserIds")
            </div>

            <div class="col-4">
                @Html.DropDownList("RoleName", "- Select Role -")
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-8">
                <button type="submit" class="btn btn-primary" style="width:100%;">Manage Roles</button>
            </div>
        </div>
    }

    <hr />

    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayName("Full Name")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
        </tr>

        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => user.FullName)
                </td>
                <td>
                    @Html.DisplayFor(model => user.Email)
                </td>
                <td>
                    @Html.DisplayFor(model => user.RoleName)
                </td>
            </tr>
        }

    </table>
</div>