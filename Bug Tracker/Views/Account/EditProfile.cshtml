@model Bug_Tracker.Models.ExtendedRegisterViewModel

@{
    ViewBag.Title = "Edit Profile";
}

    <div class="page-inner">
        <div class="card">
            <div class="card-body">

                <h2>@ViewBag.Title.</h2>

                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @*<h6>@User.Identity.Name</h6>*@

                    <h4>Edit Your Name</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group input-group">
                        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name", type = "text" } })
                    </div>

                    <div class="form-group input-group">
                        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name", type = "text" } })
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Reset" />
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
