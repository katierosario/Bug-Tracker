        <!-- Sidebar Footer Start -->
        <!--================================-->
        <div class="sidebar-footer">
            <a class="pull-left" href="@Url.Action("CustomLogOff", "Account")" data-toggle="tooltip" data-placement="top" data-original-title="Sign Out">
                <i data-feather="log-out" class="ht-15"></i>
