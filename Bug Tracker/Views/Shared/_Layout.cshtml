                            </a>
                        </li>
                    }

                    @if (User.IsInRole("ProjectManager") || User.IsInRole("Admin"))
                    {
                        <li>
                            <hr />
                            <a href="@Url.Action("ManageProjectAssignments", "Projects")" class="page-sidebar-menu">
                                <i class="fas fa-project-diagram"></i>
                                <span>Assign Projects</span>
                            </a>
                        </li>

                    }


                @if (User.IsInRole("Submitter"))
                {
                <li>
                    <div class="center">
                        <hr />
                        @Html.ActionLink("Create New Ticket", "Create", "Tickets", null, new { @class = "btn-primary" })
                    </div>
                </li>
                }
                </ul>

            </div>
        </div>
        <!--/ Sidebar Menu End -->
