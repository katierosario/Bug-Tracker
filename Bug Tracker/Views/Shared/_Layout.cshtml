                    <li>
                        <hr />
                        <a href="@Url.Action("Index", "Projects")" class="page-sidebar-menu">
                            <i class="fas fa-tasks"></i>
                            <span>Projects</span>
                        </a>
                    </li>

                    <li>
                        <hr />
                        <a href="@Url.Action("Index", "Tickets")" class="page-sidebar-menu">
                            <i class="fas fa-ticket-alt"></i>
                            <span>Tickets</span>
                        </a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <hr />
                            <a href="@Url.Action("ManageRoles", "Admin")" class="page-sidebar-menu">
                                <i class="fas fa-users-cog"></i>
