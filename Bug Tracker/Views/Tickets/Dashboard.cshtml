            </div>
        </div>
        <!--/ Breadcrumb End -->
        <!--================================-->
        <!-- Count Card Start-->
        <!--================================-->
        <div class="row row-xs clearfix">
            <div class="col-sm-6 col-xl-3">
                <div class="card mg-b-20">
                    <div class="card-body pd-y-0">
                        <div class="custom-fieldset mb-4">
                            <div class="clearfix">
                                <label>Developer</label>
                            </div>
                            <div class="d-flex align-items-center text-dark">
                                <div class="wd-40 wd-md-50 ht-40 ht-md-50 mg-r-10 mg-md-r-10 d-flex align-items-center justify-content-center rounded card-icon-warning">
                                    <i class="icon-screen-desktop tx-warning tx-20"></i>
                                </div>
                                <div>
                                    <h2 class="tx-20 tx-sm-18 tx-md-24 mb-0 mt-2 mt-sm-0 tx-normal tx-rubik tx-dark">$<span class="counter">5,300</span><small class="tx-15">.50</small></h2>
                                    <div class="d-flex align-items-center tx-gray-500"><span class="text-success mr-2 d-flex align-items-center"><i class="ion-android-arrow-up mr-1"></i>+451</span>avg. sales</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="card mg-b-20">
                    <div class="card-body pd-y-0">
                        <div class="custom-fieldset mb-4">
                            <div class="clearfix">
                                <label>Status</label>
                            </div>
                            <div class="d-flex align-items-center text-dark">
                                <div class="wd-40 wd-md-50 ht-40 ht-md-50 mg-r-10 mg-md-r-10 d-flex align-items-center justify-content-center rounded card-icon-success">
                                    <i class="icon-flag tx-success tx-20"></i>
                                </div>
                                <div>
                                    <h2 class="tx-20 tx-sm-18 tx-md-24 mb-0 mt-2 mt-sm-0 tx-normal tx-rubik tx-dark">-<span class="counter">Status Here</span><small class="tx-15">-</small></h2>
                                    <div class="d-flex align-items-center tx-gray-500"><span class="text-danger mr-2 d-flex align-items-center"><i class="ion-android-arrow-down mr-1"></i>-310</span>avg. sales</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="card mg-b-20">
                    <div class="card-body pd-y-0">
                        <div class="custom-fieldset mb-4">
                            <div class="clearfix">
                                <label>Priority</label>
                            </div>
                            <div class="d-flex align-items-center text-dark">
                                <div class="wd-40 wd-md-50 ht-40 ht-md-50 mg-r-10 mg-md-r-10 d-flex align-items-center justify-content-center rounded card-icon-primary">
                                    <i class="icon-arrow-up-circle tx-primary tx-20"></i>
                                </div>
                                <div>
                                    <h2 class="tx-20 tx-sm-18 tx-md-24 mb-0 mt-2 mt-sm-0 tx-normal tx-rubik tx-dark">-<span class="counter">Priority Here</span><small class="tx-15">-</small></h2>
                                    <div class="d-flex align-items-center tx-gray-500"><span class="text-success mr-2 d-flex align-items-center"><i class="ion-android-arrow-up mr-1"></i>+350</span>avg. sales</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="card mg-b-20">
                    <div class="card-body pd-y-0">
                        <div class="custom-fieldset mb-4">
                            <div class="clearfix">
                                <label>Type</label>
                            </div>
                            <div class="d-flex align-items-center text-dark">
                                <div class="wd-40 wd-md-50 ht-40 ht-md-50 mg-r-10 mg-md-r-10 d-flex align-items-center justify-content-center rounded card-icon-danger">
                                    <i class="icon-note tx-danger tx-20"></i>
                                </div>
                                <div>
                                    <h2 class="tx-20 tx-sm-18 tx-md-24 mb-0 mt-2 mt-sm-0 tx-normal tx-rubik tx-dark">$<span class="counter">9,900</span><small class="tx-15">.50</small></h2>
                                    <div class="d-flex align-items-center tx-gray-500"><span class="text-danger mr-2 d-flex align-items-center"><i class="ion-android-arrow-down mr-1"></i>+130</span>avg. sales</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row row-xs">
            <!--================================-->
            <!-- Ticket History Start-->
            <!--================================-->
            <div class="col-sm-6 col-xl-4">
                <div class="card mg-b-20">
                    <div class="card-header">
                        <h4 class="card-header-title">
                            Ticket History
                        </h4>
                        <div class="card-header-btn">
                            <a href="" data-toggle="collapse" class="btn card-collapse" data-target="#activityLog2" aria-expanded="true"><i class="ion-ios-arrow-down"></i></a>
                            <a href="" data-toggle="refresh" class="btn card-refresh"><i class="ion-android-refresh"></i></a>
                            <a href="" data-toggle="expand" class="btn card-expand" data-original-title="" title="" data-init="true"><i class="ion-android-expand"></i></a>
                            <a href="" data-toggle="remove" class="btn card-remove" data-original-title="" title="" data-init="true"><i class="ion-android-close"></i></a>
                        </div>
                    </div>
                    @*<div class="card-body collapse show" id="activityLog2">
                            <div class="activity">
                                <i class="icon-check bg-soft-teal"></i>
                                @foreach (var ticketHistory in Model.Histories.OrderByDescending(h => h.ChangedOn).ToList())
                                {
                                    <div class="time-item">
                                        <div class="item-info ">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="tx-dark tx-13 mb-0">Video conference</h6>
                                                <span class="small">@ticketHistory.ChangedOn.ToString("MM/dd/yyyy h:mm tt") </span>
                                            </div>
                                            <p class="mt-2 tx-12">@ticketHistory.Property changed from @ticketHistory.OldValue to @ticketHistory.NewValue by @ticketHistory.User</p>
                                            <div><span class="badge bg-soft-primary tx-uppercase">Design</span> <span class="badge bg-soft-danger  tx-uppercase">HTML</span> <span class="badge bg-soft-success  tx-uppercase">Css</span> <span class="badge bg-soft-teal  tx-uppercase">Dashboard</span></div>
                                        </div>
                                    </div>

                                }

                            </div>
                        </div>*@
                </div>
            </div>
            <!--================================-->
            <!-- Comments Start-->
            <!--================================-->
            <div class="col-sm-6 col-xl-4">
                <div class="card mg-b-20">
                    <div class="card-header">
                        <h4 class="card-header-title">
                            Ticket Comments
                        </h4>
                        <div class="card-header-btn">
                            <a href="" data-toggle="collapse" class="btn card-collapse" data-target="#recentComment" aria-expanded="true" data-original-title="" title="" data-init="true"><i class="ion-ios-arrow-down"></i></a>
                            <a href="" data-toggle="refresh" class="btn card-refresh"><i class="ion-android-refresh"></i></a>
                            <a href="" data-toggle="expand" class="btn card-expand"><i class="ion-android-expand"></i></a>
                            <a href="" data-toggle="remove" class="btn card-remove"><i class="ion-android-close"></i></a>
                        </div>
                    </div>
                    <div class="card-body collapse show" id="recentComment">
                        <div class="media-list">
                            @foreach (var ticketComment in Model.Comments.OrderByDescending(c => c.Created).ToList())
                            {
                                <div class="ml-3">
                                    @{
                                        var userHelper = new UserHelper();
                                    }
                                    <img src="@userHelper.GetUserAvatar()" class="img-fluid wd-35 ht-35 rounded-circle" alt="">
                                    <h3 class="tx-dark tx-13">@ticketComment.User.FullName<span class="small float-right tx-gray-500">@ticketComment.Created.ToString("MMM dd, yyyy")</span></h3>
                                    <p>@ticketComment.Body</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!--================================-->
            <!--/ Comments End -->
            <!--================================-->
            <!--/ Add A Comment -->
            <div class="col-sm-6 col-lg-4">
                <div class="card mg-b-20">
                    <div class="card-header">
                        <h4 class="card-header-title">
                            Add a Ticket Comment
                        </h4>
                        <div class="card-header-btn">
                            <a href="" data-toggle="collapse" class="btn card-collapse" data-target="#collapse8" aria-expanded="true"><i class="ion-ios-arrow-down"></i></a>
                            <a href="" data-toggle="refresh" class="btn card-refresh"><i class="ion-android-refresh"></i></a>
                            <a href="" data-toggle="expand" class="btn card-expand"><i class="ion-android-expand"></i></a>
                            <a href="" data-toggle="remove" class="btn card-remove"><i class="ion-android-close"></i></a>
                        </div>
                    </div>
                    <div class="card-body collapse show" id="collapse8">
                        @if (User.Identity.IsAuthenticated)
                        {
                            using (Html.BeginForm("Create", "TicketComments", FormMethod.Post, null))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("TicketId", Model.Id)

                                @Html.TextArea("CommentBody", new { rows = 14, cols = 60 })

                                <button type="submit" class="btn btn-round btn-brand">Add Comment</button>
                            }
                        }
                    </div>
                </div>
            </div>
            <!--================================-->
            <!-- showLoader Start -->
            <!--================================-->
            <div class="col-md-6 col-lg-6">
                <div class="card mg-b-20">
                    <div class="card-header">
                        <h4 class="card-header-title">
                            Upload An Attachment
                        </h4>
                        <div class="card-header-btn">
                            <a href="" data-toggle="collapse" class="btn card-collapse" data-target="#collapse9" aria-expanded="true"><i class="ion-ios-arrow-down"></i></a>
                            <a href="" data-toggle="refresh" class="btn card-refresh"><i class="ion-android-refresh"></i></a>
                            <a href="" data-toggle="expand" class="btn card-expand"><i class="ion-android-expand"></i></a>
                            <a href="" data-toggle="remove" class="btn card-remove"><i class="ion-android-close"></i></a>
                        </div>
                    </div>
                    <div class="card-body collapse show" id="inputcollapse9">
                        @Html.ValidationMessageFor(model => model.Attachments, "", new { @class = "dropify", type = "file" })
                    </div>
                </div>
            </div>
            <!-- Ticket Attachment List Start-->
            <!--================================-->
            <div class="col-sm-6 col-xl-4">
                <div class="card mg-b-20">
                    <div class="card-header">
                        <h4 class="card-header-title">
                            Ticket Attachments List
                        </h4>
                        <div class="card-header-btn">
                            <a href="" data-toggle="collapse" class="btn card-collapse" data-target="#recentComment" aria-expanded="true" data-original-title="" title="" data-init="true"><i class="ion-ios-arrow-down"></i></a>
                            <a href="" data-toggle="refresh" class="btn card-refresh"><i class="ion-android-refresh"></i></a>
                            <a href="" data-toggle="expand" class="btn card-expand"><i class="ion-android-expand"></i></a>
                            <a href="" data-toggle="remove" class="btn card-remove"><i class="ion-android-close"></i></a>
                        </div>
                    </div>
                    <div class="card-body collapse show" id="recentComment">
                        <div class="media-list">
                            @foreach (var ticketAttachment in Model.Attachments.OrderByDescending(c => c.Created).ToList())
                            {
                                <div>
                                    <div class="ml-3">
                                        <h3 class="tx-dark tx-13">@ticketAttachment.FilePath<span class="small float-right tx-gray-500">@ticketAttachment.Created.ToString("MMM dd, yyyy")</span></h3>
                                        <p>@ticketAttachment.User.FullName</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!--================================-->
            <!--/ Ticket Attachment List End -->
            <!--/ showLoader End -->
            <!--================================-->
            <!--================================-->
            <!--/ Activity Card End -->
        </div>
        <!--/ Main Wrapper End -->

        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>

